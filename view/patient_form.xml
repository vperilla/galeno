<?xml version="1.0"?>
<form>
    <group id="patient_main_info" string="General patient information" col="8">
        <group id="patient_main_1" colspan="2" col="2">
            <field name="photo" colspan="2"
                height="150" width="150" widget="image"/>
        </group>
        <group id="patient_main_2" colspan="2" col="2">
            <label name="company"/>
            <field name="company"/>
            <field name="name" colspan="4"/>
            <label name="fname"/>
            <field name="fname"/>
            <label name="lname"/>
            <field name="lname"/>
            <label name="identifier_type"/>
            <field name="identifier_type"/>
            <label name="identifier"/>
            <field name="identifier"/>
            <label name="gender"/>
            <field name="gender"/>
        </group>
        <group colspan="2" col="2" id="patient_main_3">
            <label name="country"/>
            <field name="country"/>
            <label name="subdivision"/>
            <field name="subdivision"/>
            <label name="city"/>
            <field name="city"/>
            <label name="birthdate"/>
            <field name="birthdate"/>
            <label name="age_char"/>
            <field name="age_char"/>
        </group>
        <group colspan="2" col="2" id="patient_main_4">
            <label name="blood_type"/>
            <field name="blood_type"/>
            <label name="address"/>
            <field name="address"/>
            <label name="email"/>
            <field name="email"/>
            <label name="phone"/>
            <field name="phone"/>
            <label name="emergency_phone"/>
            <field name="emergency_phone"/>
        </group>
    </group>
    <notebook colspan="4">
        <page id="patient_1" string="Secondary Information">
            <group id="patient_secondary" col="8">
                <label name="code"/>
                <field name="code"/>
                <label name="civil_status"/>
                <field name="civil_status"/>
                <label name="education_level"/>
                <field name="education_level"/>
                <label name="occupation"/>
                <field name="occupation"/>
                <label name="religion"/>
                <field name="religion"/>
                <label name="archive_number"/>
                <field name="archive_number"/>
                <label name="laterality"/>
                <field name="laterality"/>
                <label name="ethnic_group"/>
                <field name="ethnic_group"/>
                <newline/>
                <label name="disability"/>
                <field name="disability"/>
                <newline/>
                <field name="disabilities" colspan="8" mode="form,tree"
                    view_ids="galeno.patient_disability_view_form,galeno.patient_disability_view_tree"/>
            </group>
        </page>
        <page id="patient_2" string="Diseases">
            <group id="group_diseases">
                <field name="diseases"/>
            </group>
        </page>
        <page id="patient_3" string="Medicament - Vaccine">
            <field name="vaccines" colspan="4"/>
        </page>
        <page id="patient_4" string="Life style">
            <group id="lifestyle-1" string="Exercise - Sleep" colspan="4" expandable="1">
                <group id="lifestyle-exercise" colspan="2">
                    <field name="activities" colspan="4"/>
                </group>
                <group id="lifestyle-sleep" string="Sleep information"
                    colspan="2" expandable="1">
                    <label name="sleep_time"/>
                    <field name="sleep_time"/>
                    <separator name="sleep_notes" colspan="4"/>
                    <field name="sleep_notes" colspan="4"/>
                </group>
            </group>
            <group id="lifestyle-diet" string="Diet" col="6" expandable="1"
                colspan="4">
                <label name="diet_type"/>
                <field name="diet_type"/>
                <label name="diet_type_note"/>
                <field name="diet_type_note"/>
                <label name="meals_number"/>
                <field name="meals_number"/>
                <label name="coffe_consumption"/>
                <field name="coffe_consumption"/>
                <label name="sugar_consumption"/>
                <field name="sugar_consumption"/>
                <label name="salt_consumption"/>
                <field name="salt_consumption"/>
                <separator name="feeding_notes" colspan="6"/>
                <field name="feeding_notes" colspan="6"/>
            </group>
            <group id="lifestyle-drugs" string="Drugs" col="4" expandable="1">
                <field name="drugs" colspan="4"/>
            </group>
        </page>
    </notebook>
</form>
