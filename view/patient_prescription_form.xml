<?xml version="1.0"?>
<form cursor="patient">
    <group id="patient_prescription_header" colspan="4">
        <label name="date"/>
        <field name="date"/>
        <label name="professional"/>
        <field name="professional"/>
        <label name="patient"/>
        <field name="patient"/>
        <label name="code"/>
        <field name="code"/>
    </group>
    <group id="state_buttons" colspan="4" col="-1">
        <label name="type_"/>
        <field name="type_"/>
        <label name="state"/>
        <field name="state"/>
        <button name="done" icon="tryton-ok"/>
        <button name="cancel" icon="tryton-cancel"/>
        <button name="draft" icon="tryton-go-previous"/>
    </group>
    <notebook>
        <page id="prescription_lines" string="Prescription detail">
            <group id="prescription_lines" colspan="4" col="4">
                <field name="pharma_lines" colspan="4"/>
                <field name="no_pharma_lines" colspan="4"/>
            </group>
            <group id="summary_prescription" colspan="4" col="4">
                <separator name="notes" colspan="4"/>
                <field name="notes" colspan="4"/>
                <separator name="warning" colspan="4"/>
                <field name="warning" colspan="4"/>
            </group>
        </page>
    </notebook>
</form>
