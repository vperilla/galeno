<?xml version="1.0"?>
<form cursor="patient">
    <group id="patient_prescription_header" colspan="4">
        <label name="date"/>
        <field name="date"/>
        <label name="professional"/>
        <field name="professional"/>
        <label name="patient"/>
        <field name="patient"/>
        <label name="code"/>
        <field name="code"/>
        <label name="evaluation"/>
        <field name="evaluation"/>
    </group>
    <group id="state_buttons" colspan="4" col="-1">
        <label name="state"/>
        <field name="state"/>
        <button name="done"/>
        <button name="cancel"/>
        <button name="draft"/>
    </group>
    <notebook>
        <page id="pharma_lines" string="Pharmacological">
            <field name="pharma_lines" colspan="4"/>
        </page>
        <page id="no_pharma_lines" string="No Pharmacological">
            <field name="no_pharma_lines" colspan="4"/>
        </page>
    </notebook>
    <group id="summary_prescription" colspan="4" col="4">
        <separator name="notes" colspan="4"/>
        <field name="notes" colspan="4"/>
        <separator name="warning" colspan="4"/>
        <field name="warning" colspan="4"/>
    </group>
</form>
