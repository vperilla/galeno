<?xml version="1.0"?>
<form>
    <group id="basic_header">
        <group id="dates" colspan="4">
            <label name="company"/>
            <field name="company"/>
            <newline/>
            <label name="start_date"/>
            <field name="start_date"/>
            <label name="end_date"/>
            <field name="end_date"/>
        </group>
        <group id="buttons" colspan="4" col="-1">
            <label name="state"/>
            <field name="state"/>
            <button name="accomplished"/>
            <button name="patient_cancel"/>
            <button name="professional_cancel"/>
            <button name="scheduled"/>
        </group>
        <label name="patient"/>
        <field name="patient"/>
        <label name="professional"/>
        <field name="professional"/>
        <separator name="notes" colspan="4"/>
        <field name="notes" colspan="4"/>
        <field name="appointments_of_day" colspan="4"
            view_ids="galeno.patient_appointment_simple_view_tree"/>
    </group>
</form>
