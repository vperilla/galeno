<?xml version="1.0"?>
<form>
    <group id="patient_disability">
        <label name="patient"/>
        <field name="patient"/>
        <newline/>
        <group id="disability_main" colspan="4" col="6">
            <label name="type_"/>
            <field name="type_"/>
            <label name="percentage"/>
            <field name="percentage" factor="100"/>
            <label name="legal_reference"/>
            <field name="legal_reference"/>
        </group>
        <label name="disease"/>
        <field name="disease" colspan="3"/>
        <separator name="description" colspan="4"/>
        <field name="description" colspan="4"/>
    </group>
</form>
