<?xml version="1.0"?>
<form cursor="patient">
    <group id="patient_evaluation_header" colspan="4" col="6">
        <label name="code"/>
        <field name="code"/>
        <label name="professional"/>
        <field name="professional"/>
        <newline/>
        <label name="reason"/>
        <field name="reason"/>
        <label name="start_date"/>
        <field name="start_date"/>
        <label name="end_date"/>
        <field name="end_date"/>
        <label name="patient"/>
        <field name="patient"/>
        <label name="patient_gender"/>
        <field name="patient_gender"/>
        <label name="patient_age"/>
        <field name="patient_age"/>
    </group>
    <group id="state_buttons" colspan="4" col="-1">
        <label name="state"/>
        <field name="state"/>
        <button name="finish" icon="tryton-ok"/>
        <button name="cancel" icon="tryton-cancel"/>
        <button name="initial" icon="tryton-go-previous"/>
    </group>
    <group id="summary_treatment" colspan="8" col="8">
        <group id="summ_l" colspan="4">
            <separator name="symptoms" colspan="4"/>
            <field name="symptoms" colspan="4"/>
        </group>
        <group id="summ_r" colspan="4">
            <separator name="treatment" colspan="4"/>
            <field name="treatment" colspan="4"/>
        </group>
    </group>
    <notebook>
        <page id="evaluation_vital_signs" string="Vital signs"
            icon="galeno-vital-sign">
            <group id="vital_signs" colspan="4" col="6">
                <label name="systolic_pressure"/>
                <field name="systolic_pressure"/>
                <label name="diastolic_pressure"/>
                <field name="diastolic_pressure"/>
                <label name="temperature"/>
                <field name="temperature"/>
                <label name="heart_rate"/>
                <field name="heart_rate"/>
                <label name="breathing_rate"/>
                <field name="breathing_rate"/>
                <label name="oxygen_saturation"/>
                <field name="oxygen_saturation"/>
                <label name="weight"/>
                <field name="weight"/>
                <label name="heigth"/>
                <field name="heigth"/>
                <label name="bmi"/>
                <field name="bmi"/>
                <label name="hip"/>
                <field name="hip"/>
                <label name="waist"/>
                <field name="waist"/>
                <label name="whr"/>
                <field name="whr"/>
                <label name="malnutrition"/>
                <field name="malnutrition"/>
                <label name="dehydration"/>
                <field name="dehydration"/>
            </group>
        </page>
        <page id="rpe_exam" string="Regional Physical Exam"
            icon="galeno-rpe">
            <separator name="rpe_notes" colspan="4"/>
            <field name="rpe_notes" colspan="4"/>
            <group id="rpe_main_1" colspan="4" col="8">
                <separator id="help_rpe" string="Mark any of these examination items in case of finding some type of patholoty" colspan="12"/>
                <group id="rpe_oropharynx" string="Oropharynx" colspan="2" col="4" expandable="1">
                    <label name="rpe_oropharynx_lips"/>
                    <field name="rpe_oropharynx_lips"/>
                    <label name="rpe_oropharynx_tongue"/>
                    <field name="rpe_oropharynx_tongue"/>
                    <label name="rpe_oropharynx_pharynx"/>
                    <field name="rpe_oropharynx_pharynx"/>
                    <label name="rpe_oropharynx_tonsils"/>
                    <field name="rpe_oropharynx_tonsils"/>
                    <label name="rpe_oropharynx_teeth"/>
                    <field name="rpe_oropharynx_teeth"/>
                </group>
                <group id="rpe_nose" string="Nose" colspan="2" col="2" expandable="1">
                    <label name="rpe_nose_partition"/>
                    <field name="rpe_nose_partition"/>
                    <label name="rpe_nose_turbinates"/>
                    <field name="rpe_nose_turbinates"/>
                    <label name="rpe_nose_mocous"/>
                    <field name="rpe_nose_mocous"/>
                    <label name="rpe_nose_paranasal_sinuses"/>
                    <field name="rpe_nose_paranasal_sinuses"/>
                </group>
                <group id="rpe_ear" string="Ear" colspan="2" col="2" expandable="1">
                    <label name="rpe_ear_extern"/>
                    <field name="rpe_ear_extern"/>
                    <label name="rpe_ear_pavilion"/>
                    <field name="rpe_ear_pavilion"/>
                    <label name="rpe_ear_eardrums"/>
                    <field name="rpe_ear_eardrums"/>
                </group>
                <group id="rpe_eyes" string="Eyes" colspan="2" col="2" expandable="1">
                    <label name="rpe_eyes_conjunctive"/>
                    <field name="rpe_eyes_conjunctive"/>
                    <label name="rpe_eyes_pupils"/>
                    <field name="rpe_eyes_pupils"/>
                    <label name="rpe_eyes_motility"/>
                    <field name="rpe_eyes_motility"/>
                </group>
            </group>
            <group id="rpe_main_2" colspan="4" col="8">
                <group id="rpe_column" string="Column" colspan="2" col="2" expandable="1">
                    <label name="rpe_column_flexibility"/>
                    <field name="rpe_column_flexibility"/>
                    <label name="rpe_column_deviation"/>
                    <field name="rpe_column_deviation"/>
                    <label name="rpe_column_pain"/>
                    <field name="rpe_column_pain"/>
                </group>
                <group id="rpe_chest" string="Chest" colspan="2" col="2" expandable="1">
                    <label name="rpe_chest_mammary_glands"/>
                    <field name="rpe_chest_mammary_glands"/>
                    <label name="rpe_chest_heart"/>
                    <field name="rpe_chest_heart"/>
                    <label name="rpe_chest_lungs"/>
                    <field name="rpe_chest_lungs"/>
                    <label name="rpe_chest_ribs"/>
                    <field name="rpe_chest_ribs"/>
                </group>
                <group id="rpe_limbs" string="Limbs" colspan="2" col="2" expandable="1">
                    <label name="rpe_limbs_vascular"/>
                    <field name="rpe_limbs_vascular"/>
                    <label name="rpe_limbs_superior"/>
                    <field name="rpe_limbs_superior"/>
                    <label name="rpe_limbs_inferior"/>
                    <field name="rpe_limbs_inferior"/>
                </group>
                <group id="rpe_neuro" string="Neurological" colspan="2" col="2" expandable="1">
                    <label name="rpe_neuro_strength"/>
                    <field name="rpe_neuro_strength"/>
                    <label name="rpe_neuro_sensivity"/>
                    <field name="rpe_neuro_sensivity"/>
                    <label name="rpe_neuro_march"/>
                    <field name="rpe_neuro_march"/>
                </group>
            </group>
            <group id="rpe_main_3" colspan="4" col="8">
                <group id="rpe_neck" string="Neck" colspan="2" col="2" expandable="1">
                    <label name="rpe_neck_thyroid"/>
                    <field name="rpe_neck_thyroid"/>
                    <label name="rpe_neck_mobility"/>
                    <field name="rpe_neck_mobility"/>
                </group>
                <group id="rpe_pelvis" string="Pelvis" colspan="2" col="2" expandable="1">
                    <label name="rpe_pelvis_pelvis"/>
                    <field name="rpe_pelvis_pelvis"/>
                    <label name="rpe_pelvis_genitals"/>
                    <field name="rpe_pelvis_genitals"/>
                </group>
                <group id="rpe_abdomen" string="Abdomen" colspan="2" col="2" expandable="1">
                    <label name="rpe_abdomen_viscera"/>
                    <field name="rpe_abdomen_viscera"/>
                    <label name="rpe_abdomen_abdominal_wall"/>
                    <field name="rpe_abdomen_abdominal_wall"/>
                </group>
                <group id="rpe_skin" string="Skin" colspan="2" col="2" expandable="1">
                    <label name="rpe_skin_scars"/>
                    <field name="rpe_skin_scars"/>
                    <label name="rpe_skin_tatoo"/>
                    <field name="rpe_skin_tatoo"/>
                    <label name="rpe_skin_facer"/>
                    <field name="rpe_skin_facer"/>
                </group>
            </group>
        </page>
        <page id="evaluation_systems_organs" string="Systems - Organs"
            icon="galeno-system-organ">
            <group id="main_so" colspan="4" col="6">
                <group id="system_organs_main_1" colspan="2" col="2">
                    <separator name="so_respiratory" colspan="2"/>
                    <field name="so_respiratory" colspan="2"/>
                    <separator name="so_cardiovascular" colspan="2"/>
                    <field name="so_cardiovascular" colspan="2"/>
                    <separator name="so_digestive" colspan="2"/>
                    <field name="so_digestive" colspan="2"/>
                </group>
                <group id="system_organs_main_2" colspan="2" col="2">
                    <separator name="so_nervous" colspan="2"/>
                    <field name="so_nervous" colspan="2"/>
                    <separator name="so_sense" colspan="2"/>
                    <field name="so_sense" colspan="2"/>
                    <separator name="so_endocrine" colspan="2"/>
                    <field name="so_endocrine" colspan="2"/>
                </group>
                <group id="system_organs_main_3" colspan="2" col="1">
                    <separator name="so_skeletal_muscle" colspan="2"/>
                    <field name="so_skeletal_muscle" colspan="2"/>
                    <separator name="so_genitourinary" colspan="2"/>
                    <field name="so_genitourinary" colspan="2"/>
                    <separator name="so_hemolymphatic" colspan="2"/>
                    <field name="so_hemolymphatic" colspan="2"/>
                </group>
            </group>
        </page>
        <page id="mental_status" string="Mental status"
            icon="galeno-mental-status">
            <group id="mental_status_1" colspan="4" col="4">
                <label name="ms_eye"/>
                <field name="ms_eye"/>
                <label name="ms_verbal"/>
                <field name="ms_verbal"/>
                <label name="ms_motor"/>
                <field name="ms_motor"/>
                <label name="ms_glasgow_score"/>
                <field name="ms_glasgow_score"/>
                <label name="ms_mood"/>
                <field name="ms_mood"/>
            </group>
            <group id="mental_status_2" colspan="4" col="6">
                <newline/>
                <label name="ms_violent_behavior"/>
                <field name="ms_violent_behavior"/>
                <label name="ms_orientation"/>
                <field name="ms_orientation"/>
                <label name="ms_perception_reality"/>
                <field name="ms_perception_reality"/>
                <label name="ms_abstraction"/>
                <field name="ms_abstraction"/>
                <label name="ms_calc_skill"/>
                <field name="ms_calc_skill"/>
                <label name="ms_memory"/>
                <field name="ms_memory"/>
                <label name="ms_discernment"/>
                <field name="ms_discernment"/>
                <label name="ms_vocabulary"/>
                <field name="ms_vocabulary"/>
                <label name="ms_object_recognition"/>
                <field name="ms_object_recognition"/>
                <separator name="ms_notes" colspan="6"/>
                <field name="ms_notes" colspan="6"/>
            </group>
        </page>
        <page id="tests" string="Requested tests" icon="galeno-test">
            <group id="tests">
                <field name="requested_tests" mode="tree,form"
                    view_ids="galeno.patient_evaluation_test_view_tree_simple,galeno.patient_evaluation_test_view_form" colspan="4"/>
            </group>
        </page>
        <page id="images" string="Images" icon="galeno-photo">
            <group id="images">
                <field name="images" colspan="4"/>
            </group>
        </page>
        <page id="evaluation_diagnosis" string="Diagnosis - Procedures"
            icon="galeno-diagnosis">
            <group id="diagnostics" colspan="4" col="4">
                <field name="diagnostics" colspan="4"/>
            </group>
            <group id="procedures" colspan="4" col="4">
                <field name="procedures" colspan="4"/>
            </group>
        </page>
    </notebook>
</form>
